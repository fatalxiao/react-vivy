{
    "compilerOptions": {
        "outDir": "es",
        "module": "esnext",
        "target": "es2020",
        "lib": [
            "es2020",
            "esnext",
            "dom"
        ],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
